<h1>Listing ads</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Email</th>
    <th>Phone</th>
  </tr>

<% @ads.each do |ad| %>
  <tr>
    <td><%=h ad.title %></td>
    <td><%=h ad.body %></td>
    <td><%=h ad.email %></td>
    <td><%=h ad.phone %></td>
    <td><%= link_to 'Show', ad %></td>
    <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
    <td><%= link_to 'Destroy', ad, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ad', new_ad_path %>