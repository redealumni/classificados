  <p>
     <%= f.label :email, t("activerecord.attributes.ad.email").titlecase %><br />
     <%= f.text_field :email %>
   </p>
   <p>
     <%= f.label :phone, t("activerecord.attributes.ad.phone").titlecase %><br />
