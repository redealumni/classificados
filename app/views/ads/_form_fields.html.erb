  <p>
    <%= f.label :title, t("activerecord.attributes.ad.title").titlecase %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body, t("activerecord.attributes.ad.body").titlecase %><br />
    <%= f.text_area :body, :size => "40x8" %>
