<div class= "yui-g">
  <div class= "yui-u first">
	<p>
    <%= f.label :kind, t("activerecord.attributes.ad.kind").titlecase %><br />
    <%= f.select :kind, Ad::KINDS.map{|k| [t(k), k]} %>
  </p>
  <p>
    <%= f.label :category_id, t("activerecord.attributes.ad.category").titlecase %><br />
